# Global Aliases
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

# Remap Capslock to Escape
setxkbmap -option caps:escape

# (Neo)Vim for Life
alias vi=nvim
alias vim=nvim
bindkey -v                                          # Use vi key bindings in zsh
export KEYTIMEOUT=1				                    # Reduce transition delay to .4 (default) -> .1 sec
set -o vi
export EDITOR=nvim
export VISUAL=nvim

#.Net
export PATH=${PATH}:${HOME}/.dotnet

# Bash has some nice stuff sometimes I guess
bindkey '^r' history-incremental-search-backward    # [Ctrl-r] - Search backward incrementally for a specified string. The string may begin with ^ to anchor the search to the beginning of the line.
bindkey '^[[A' history-beginning-search-backward 
bindkey '^[[B' history-beginning-search-forward

#OpenWeave toolchain
export NRF5_SDK_ROOT=${HOME}/OpenSource/openweave-tools/nRF5_SDK
export NRF5_TOOLS_ROOT=${HOME}/OpenSource/openweave-tools/nRF5-CLI
export GNU_INSTALL_ROOT=${HOME}/OpenSource/openweave-tools/gcc-arm-none-eabi-7-2018-q2-update-linux/bin
export PATH=${PATH}:${NRF5_TOOLS_ROOT}/nrfjprog

#NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

